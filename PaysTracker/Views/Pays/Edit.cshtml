@model PaysTracker.Models.Pays

@{
    ViewData["Title"] = "Edit";
}

<h1>Edition</h1>

<h4>@Model.Nom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Nom" />
            <div class="form-group">
                <label asp-for="Dirigeant" class="control-label"></label>
                <input asp-for="Dirigeant" class="form-control" />
                <span asp-validation-for="Dirigeant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surface" class="control-label"></label>
                <input asp-for="Surface" class="form-control" />
                <span asp-validation-for="Surface" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Population" class="control-label"></label>
                <input asp-for="Population" class="form-control" />
                <span asp-validation-for="Population" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegimeId" class="control-label"></label>
                <select asp-for="RegimeId" class="form-control" asp-items="ViewBag.RegimeId"></select>
                <span asp-validation-for="RegimeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
